<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="60dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginBottom="60dp"
    android:background="@null">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        android:layout_centerVertical="true"
        android:background="@color/colorAccent"
        card_view:cardBackgroundColor="@color/colorAccent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <TextView
                android:id="@+id/recorderTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¿Sos periodista?"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/recorderCaption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recorderTitle"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:textSize="20sp"
                android:text="Ingresa tus credenciales para poder grabar en las notas de la aplicación"/>

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="Login con La Nación"
                android:layout_below="@+id/recorderCaption"
                android:layout_marginBottom="15dp"
                android:background="@drawable/background_button_login"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>